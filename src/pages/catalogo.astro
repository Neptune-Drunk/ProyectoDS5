<Layout title="Catálogo">
  <Header />
  <div class="catalog-page">
    <aside class="sidebar">
      <nav class="filters">
        <div class="filter-section">
          <h3>Marcas</h3>
          <ul class="filter-options">
            <li><input type="checkbox" id="apple" /> Apple</li>
            <li><input type="checkbox" id="dell" /> Dell</li>
            <li><input type="checkbox" id="hp" /> HP</li>
            <li><input type="checkbox" id="acer" /> Acer</li>
            <li><input type="checkbox" id="msi" /> MSI</li>
            <li><input type="checkbox" id="microsoft" /> Microsoft</li>
            <li><input type="checkbox" id="asus" /> Asus</li>
            <li><input type="checkbox" id="lenovo" /> Lenovo</li>
            <li><input type="checkbox" id="huawei" /> Huawei</li>
          </ul>
        </div>
        <div class="filter-section">
          <h3>Almacenamiento</h3>
          <ul class="filter-options">
            <li><input type="checkbox" id="256gb" /> 256 GB</li>
            <li><input type="checkbox" id="512gb" /> 512 GB</li>
            <li><input type="checkbox" id="1tb" /> 1 TB</li>
          </ul>
        </div>
        <div class="filter-section">
          <h3>RAM</h3>
          <ul class="filter-options">
            <li><input type="checkbox" id="4gb" /> 4 GB</li>
            <li><input type="checkbox" id="8gb" /> 8 GB</li>
            <li><input type="checkbox" id="16gb" /> 16 GB</li>
          </ul>
        </div>
        <div class="filter-section">
          <h3>Gama</h3>
          <ul class="filter-options">
            <li><input type="checkbox" id="baja" /> Baja</li>
            <li><input type="checkbox" id="media" /> Media</li>
            <li><input type="checkbox" id="alta" /> Alta</li>
            <li><input type="checkbox" id="empresarial" /> Empresarial</li>
            <li><input type="checkbox" id="gamer" /> Gamer</li>
          </ul>
        </div>
      </nav>
    </aside>

    <div class="catalog-container">
      {products.map(product => (
        <ProductCard product={product} />
      ))}
    </div>
  </div>
  <Footer />
</Layout>

<style>
  .catalog-page {
    display: flex;
    gap: 2rem;
    padding: 1rem 2rem;
  }

  .sidebar {
    width: 250px;
    border-right: 1px solid #ddd;
    padding-right: 1rem;
  }

  .filters {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .filter-section {
    margin-bottom: 1rem;
  }

  .filter-section h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .filter-options {
    list-style: none;
    padding: 0;
  }

  .filter-options li {
    margin: 0.5rem 0;
  }

  .filter-options input {
    margin-right: 0.5rem;
  }

  .catalog-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    flex-grow: 1;
  }
</style>
